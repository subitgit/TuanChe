<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwf.tuanche.ui.detail.CarDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color_title_bg"
        android:layout_height="@dimen/title_height">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_height"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="-8dp"
            android:padding="15dp"
            android:clickable="true"
            android:background="@drawable/selector_title_iv_bg"
            android:layout_height="@dimen/title_height" />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/title_height"
            android:src="@mipmap/icon_fenxiang"
            android:padding="15dp"
            android:layout_height="@dimen/title_height"
            android:background="@drawable/selector_title_iv_bg"
            android:clickable="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_title_divider"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="车型-"
                android:textColor="@color/color_title_tv_gray"/>
            <TextView
                android:id="@+id/tv_location"
                android:layout_toRightOf="@id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:drawableRight="@mipmap/icon_xiajiantou"
                android:textColor="@color/color_title_tv_red"
                android:drawablePadding="2dp"/>

        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:id="@+id/fragment1"
                android:name="com.bwf.tuanche.ui.detail.fragment.CarDetailFragment1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <fragment
                android:id="@+id/fragment2"
                android:name="com.bwf.tuanche.ui.detail.fragment.CarDetailFragment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </ScrollView>



</LinearLayout>
