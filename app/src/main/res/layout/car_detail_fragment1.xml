<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simpleDraweeView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        fresco:placeholderImage="@mipmap/default_special_1"
        fresco:placeholderImageScaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_title_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_partake_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_title_tv_gray"/>
            <TextView
                android:id="@+id/tv_partake"
                android:layout_below="@id/tv_partake_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_tv_orange"/>


        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_title_divider" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_save_up_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_title_tv_gray"/>
            <TextView
                android:id="@+id/tv_save_up_money"
                android:layout_below="@id/tv_save_up_string"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_tv_orange"/>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_title_divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_title_divider_large"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_title_divider" />

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_date_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:text="团购时间:"
            android:textColor="@color/color_black"
            android:textStyle="bold"/>
        <TextView
            android:layout_toRightOf="@id/tv_date_string"
            android:id="@+id/tv_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_date_string"
            android:layout_marginLeft="4dp"
            android:textSize="14sp"
            android:textColor="@color/color_tv_deeper_gray"/>
        <TextView
            android:layout_toRightOf="@id/tv_Date"
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_date_string"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/color_title_pressed"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_location_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:text="团购地点:"
            android:textColor="@color/color_black"
            android:textStyle="bold"/>
        <TextView
            android:layout_toRightOf="@id/tv_location_string"
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_location_string"
            android:textSize="14sp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/color_tv_deeper_gray"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_price"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:background="@color/color_white"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_price_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:text="团购价格:"
            android:textColor="@color/color_black"
            android:textStyle="bold"/>
        <TextView
            android:layout_toRightOf="@id/tv_price_string"
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_price_string"
            android:textSize="14sp"
            android:text="现场公布"
            android:layout_marginLeft="4dp"
            android:textColor="@color/color_tv_deeper_gray"/>

        <TextView
            android:id="@+id/tv_about_price"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/tv_price"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:text="@string/question_mask"
            android:textColor="@color/color_tv_orange"
            android:background="@drawable/shape_circle_orange"/>

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_marginTop="12dp"
        android:hint="请输入手机号"
        android:textSize="14sp"
        android:background="@drawable/shape_round_rectangle"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:textColorHint="@color/color_title_divider"
        android:textCursorDrawable="@drawable/edittext_cursor_color"
        android:paddingBottom="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:hint="请输入姓名"
        android:textSize="14sp"
        android:background="@drawable/shape_round_rectangle"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:textColorHint="@color/color_title_divider"
        android:textCursorDrawable="@drawable/edittext_cursor_color"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_title_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color_title_divider_large"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_groupbuy"
            android:layout_width="match_parent"
            android:text="团购报名"
            android:textColor="@color/color_white"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/selector_groupbuy_tv_bg"
            android:layout_height="wrap_content"
            android:clickable="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*您的信息仅供团车网报名使用，请放心报名！"
            android:layout_centerInParent="true"
            android:layout_below="@id/tv_groupbuy"
            android:textSize="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/color_tv_deeper_gray"/>

    </RelativeLayout>


</LinearLayout>