<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEF3FA"
    android:orientation="vertical"
    tools:context="com.bwf.czg.SelectCityActivity">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_selectCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="当前城市"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_selectCity"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@mipmap/icon_back"
            android:background="#EEF3FA"/>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl"
        android:background="#DFDFDF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginRight="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/text_style"
                android:text="定位城市" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <TextView
                android:id="@+id/tv_dingwei"
                style="@style/text_style1"
                android:text="定位中..."
                android:textColor="@android:color/holo_red_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <TextView
                style="@style/text_style"
                android:text="周边城市" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DFDFDF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nearCity1"
                    style="@style/text_style1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="郑州" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#EEF3FA" />

                <TextView
                    android:id="@+id/tv_nearCity2"
                    style="@style/text_style1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="太原" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#EEF3FA" />

                <TextView
                    android:id="@+id/tv_nearCity3"
                    style="@style/text_style1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="银川" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#EEF3FA" />

                <TextView
                    android:id="@+id/tv_nearCity4"
                    style="@style/text_style1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="重庆" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DFDFDF" />

            <TextView
                style="@style/text_style"
                android:text="热门城市" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DFDFDF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hotCity1"
                    style="@style/text_style1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="热门1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#EEF3FA" />

                <TextView
                    android:id="@+id/tv_hotCity2"
                    style="@style/text_style1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="热门2" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#EEF3FA" />

                <TextView
                    android:id="@+id/tv_hotCity3"
                    style="@style/text_style1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="热门3" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#EEF3FA" />

                <TextView
                    android:id="@+id/tv_hotCity5"
                    style="@style/text_style1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="热门4" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DFDFDF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hotCity6"
                    style="@style/text_style1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="热门5" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#EEF3FA" />

                <TextView
                    android:id="@+id/tv_hotCity7"
                    style="@style/text_style1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="热门6" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#EEF3FA" />

                <TextView
                    android:id="@+id/tv_hotCity8"
                    style="@style/text_style1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="热门7" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#EEF3FA" />

                <TextView
                    android:id="@+id/tv_hotCity4"
                    style="@style/text_style1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="热门8" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#EEF3FA" />

            <com.bwf.czg.ScrollViewWithListView
                android:id="@+id/lv_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
