<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context="com.bwf.tuanche.ui.carselect.CarSelectMainActivity">

    <RelativeLayout
        android:id="@+id/ll_pricesel_title"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_pricecarback"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@mipmap/icon_back" />

        <LinearLayout
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_round_left"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/round_red_left" />

                <ImageView
                    android:id="@+id/img_round_right"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/img_round_left"
                    android:scaleType="fitXY"
                    android:src="@mipmap/round_white_right" />

                <TextView
                    android:id="@+id/tv_round_left"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@id/img_round_left"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/brandcar"
                    android:textColor="@color/white"
                    android:textSize="@dimen/lable25" />

                <TextView
                    android:id="@+id/tv_round_right"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@id/img_round_right"
                    android:layout_toRightOf="@id/img_round_left"
                    android:gravity="center"
                    android:text="@string/optioncar"
                    android:textColor="@color/black"
                    android:textSize="@dimen/lable25" />


            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/search_icon_search" />
    </RelativeLayout>

    <fragment
        android:id="@+id/fm_brandcarcra"
        android:name="com.bwf.tuanche.ui.carselect.fragment.BrandCarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_pricesel_title" />
    <fragment
        android:id="@+id/fm_optioncar"
        android:name="com.bwf.tuanche.ui.carselect.fragment.OptionCarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_pricesel_title" />

</RelativeLayout>
