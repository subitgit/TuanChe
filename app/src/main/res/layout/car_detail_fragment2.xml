<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="购车评价"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/color_tv_deeper_gray"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_commentTotal"
            style="@style/RatingText_Style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_marginRight="10dp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/RadingStyle"
            android:layout_toLeftOf="@id/tv_commentTotal"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:layout_marginRight="6dp"
            android:numStars="5"
            android:rating="4.6"
            android:stepSize="0.1"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_title_divider" />
    </RelativeLayout>

    <com.bwf.tuanche.view.MeasureHeightListView
        android:id="@+id/lv_appraise"
        android:layout_width="match_parent"
        android:divider="@null"
        android:padding="8dp"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_title_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_allcomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/color_title_tv_red"
            android:drawableRight="@mipmap/icon_arraw_right"
            />

    </RelativeLayout>

</LinearLayout>