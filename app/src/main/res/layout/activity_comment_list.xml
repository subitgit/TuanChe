<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.bwf.tuanche.ui.detail.CommentListActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color_title_bg"
        android:layout_height="@dimen/title_height">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_height"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="-8dp"
            android:padding="15dp"
            android:clickable="true"
            android:background="@drawable/selector_title_iv_bg"
            android:layout_height="@dimen/title_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_title_divider"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/color_title_tv_gray"
                android:text="评价详情"/>

        </RelativeLayout>
    </RelativeLayout>

    <com.bwf.tuanche.view.RefreshableListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
