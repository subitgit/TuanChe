<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_pop_carsel_lable"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="@dimen/lable25"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_pop_carsel"
        android:orientation="horizontal">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_pop_carsel"
            android:layout_width="150dp"
            android:layout_height="100dp"
            fresco:actualImageScaleType="fitCenter"
            fresco:placeholderImage="@mipmap/default_list_logo"
            fresco:placeholderImageScaleType="centerCrop" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pop_carsel_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/brandhot"
                android:textColor="@color/black"
                android:textSize="@dimen/lable15" />

            <TextView
                android:id="@+id/tv_pop_carsel_direct_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/brandhot"
                android:textColor="@color/simple_black"
                android:textSize="@dimen/lable12" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>